    ViewData["Title"] = "Create";

}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Employee</h1>
    <form method="post" asp-controller="Employees"
          asp-action="Create" class="col-8" ]>

